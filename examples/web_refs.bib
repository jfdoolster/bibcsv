    author = {Barchyn, Thomas E. and Hugenholtz, Chris H. and Fox, Thomas A.},
    title = "{Plume detection modeling of a drone-based natural gas leak detection system}",
    journal = {Elementa: Science of the Anthropocene},
    volume = {7},
